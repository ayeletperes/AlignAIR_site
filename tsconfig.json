{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Base directory to resolve non-absolute module names
    "paths": {
      "@components/*": ["components/*"], // Alias for components
      "@utilities/*": ["components/utilities/*"], // Alias for utilities
      "@/*": ["./*"] // Existing catch-all alias
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "tests/components/utilities/sequenceTokenizerWorker.test.tsx", "app/(default)/alignair/.archive_page"  ],
  "exclude": [
    "node_modules"
  ]
}
